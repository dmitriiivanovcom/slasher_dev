            </tr>
            <tr>
                <th>Charisma</th>
                <td>{{ character.charisma }}</td>
            </tr>
            <tr>
                <th>Quote</th>
                <td>{{ character.quote }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ character.role }}</td>
            </tr>
            <tr>
                <th>Portrait</th>
                <td>{{ character.portrait }}</td>
            </tr>
            <tr>
                <th>BackgroundImage</th>
