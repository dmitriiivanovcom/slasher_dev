<form method="post" action="{{ path('app_location_delete', {'id': location.id}) }}" onsubmit="return confirm('Are you sure you want to delete this location?');" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
    <button class="menu-link" style="color: #ff4444;" type="submit">Delete</button>
</form> 