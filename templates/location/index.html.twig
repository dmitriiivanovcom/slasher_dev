{% extends 'base.html.twig' %}

{% block title %}All Locations{% endblock %}

{% block body %}
    <div class="index-container">
        <h1 class="all-characters-title">All Locations</h1>

        <ul class="index-list">
            {% for location in locations %}
                <li>
                    <a href="{{ path('app_location_show', {'id': location.id}) }}" class="menu-link" style="font-size: 2.2rem;">{{ location.name }}</a>
                </li>
            {% else %}
                <li>No locations found.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %} 