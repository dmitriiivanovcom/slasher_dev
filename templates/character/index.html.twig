{% extends 'base.html.twig' %}

{% block title %}All Characters{% endblock %}

{% block body %}
    <div class="index-container">
        <h1 class="all-characters-title">All Characters</h1>

        <ul class="index-list">
            {% for character in characters %}
                <li>
                    <a href="{{ path('app_character_show', {'id': character.id}) }}" class="menu-link" style="font-size: 2.2rem;">{{ character.name }}</a>
                </li>
            {% else %}
                <li>No characters found.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
