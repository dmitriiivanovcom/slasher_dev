{% extends 'base.html.twig' %}

{% block title %}{{ weapon.name }}{% endblock %}

{% block body %}
<div class="show-page-wrapper">
    <div class="card" style="background-image: url('{{ weapon.image ? asset('uploads/weapons/' ~ weapon.image) : asset('img/default_bg.jpg') }}');">
        <div class="corner-block top-left">
            <div class="name slasher-heading">{{ weapon.name }}</div>
            <div style="font-size: 1.2rem; color: #a09696;">{{ weapon.title }}</div>
            {% if weapon.ammoStatus %}
                <div class="ammo-warning" style="margin-top: 1rem; color: #bb0900;">{{ weapon.ammoStatus }}</div>
            {% endif %}
        </div>

        <div class="corner-block bottom-left">
            {% if weapon.description %}<p><strong>Описание:</strong> {{ weapon.description }}</p>{% endif %}
            {% if weapon.type %}<p><strong>Тип:</strong> {{ weapon.type }}</p>{% endif %}
        </div>
    </div>
    
    <div class="action-buttons-container">
        <a class="menu-link" href="{{ path('app_weapon_index') }}">Back to list</a>
        <a class="menu-link" href="{{ path('app_weapon_edit', {'id': weapon.id}) }}">Edit</a>
        {{ include('weapon/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
